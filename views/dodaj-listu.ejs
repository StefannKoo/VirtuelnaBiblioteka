<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/assets/book-icon.png">
    <style>
        * {
            font-family: 'MonteCarlo', cursive;

        }
    </style>
    <link rel="stylesheet" href="/css/korisnik.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>EBiblioteka</title>
</head>
<body>
    <%- include('./partials/navbar') %>

    <div class="container">
        <div class="row mt-4">
            <div class="col-8 border">
                <h3 class="text-center mt-4">Kreirajte novu listu</h3>
                <form style="width: 70%; margin: 0 auto; " class="mt-5 p-5" action="/korisnik/liste/nova" method="POST" >
                    <div class="form-group">
                      <label for="lista">Unesite naziv liste</label>
                      <input type="text" class="form-control mt-1" name="ime" id="lista" required aria-describedby="emailHelp" placeholder="Unesite naziv liste">
                
                    </div>
                    <div class="form-check mt-2">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="javna" checked>
                        <label class="form-check-label" for="exampleRadios1">
                          Javna lista
                        </label>
                      </div>
                      <div class="form-check mt-2">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="privatna">
                        <label class="form-check-label" for="exampleRadios2">
                          Privatna lista
                        </label>
                      </div>
                      <button type="submit" class="btn btn-warning mt-3">Kreiraj</button>
                      <button type="button" onclick="window.location.href='/korisnik/liste'"  class="btn btn-warning mt-3">Odustani</button>
                  </form>
            </div>
            <div class="col-4"></div>
        </div>
    </div>


    <%- include('./partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"
        integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"
        integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/"
        crossorigin="anonymous"></script>
</body>
</html>