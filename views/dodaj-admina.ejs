<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/assets/book-icon.png">
    <style>
        * {
            font-family: 'MonteCarlo', cursive;
        }
    </style>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
        integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Dodavanje admina</title>
</head>
<%- include('./partials/navbar') %>

    <body>
        <div class="container mt-4">
            <div style="height: 60px;" class=" d-flex align-items-center bg-info justify-content-center ">
                <h3>Korisnici</h3>
            </div>
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Korisnicko ime</th>
                        <th scope="col">Privilegija</th>

                        <th scope="col">Postavi za admin-a</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0;i<korisnici.length;i++) { %>
                        <tr class="<%=korisnici[i].korisnik_id%>">
                            <th scope="row">
                                <%=i+1%>
                            </th>
                            <td>
                                <%=korisnici[i].nadimak%>
                            </td>
                            <td>
                                <% if(korisnici[i].administrator){%>
                                    <b>Admin</b>
                                    <% } else {%>
                                        Citalac
                                        <% } %>
                            </td>

                            <td>
                                <% if(korisnici[i].administrator) { %>
                                    <span class="text-secondary"><i class="fas fa-users-cog"></i></span>
                                    <% } else { %>
                                        <button onclick="dodajModeratora(this)" id="<%=korisnici[i].korisnik_id%>" class="text-primary border-0" style="background: white;"><i
                                                class="fas fa-users-cog"></i></button>
                            </td>
                            <% } %>
                        </tr>
                        <% } %>
                </tbody>
            </table>
            <button onclick=" window.location.href='/korisnik'" class="btn btn-primary mx-auto"><<</button>
        </div>
        <script src="/js/admin.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"
            integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"
            integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/"
            crossorigin="anonymous"></script>
    </body>

</html>